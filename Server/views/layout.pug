        style(type='text/css').
            body {
                background-image: url("/img/doctorBackground.jpeg");
                background-repeat: no-repeat;
                /* background-image: url("https://www.planwallpaper.com/static/images/desktop-backgrounds1_wvNeWqW.jpg"); */
                padding: 5px;
                color: #dc3545;
                font-family: 'Open Sans', sans-serif;
                font-size: 0.95em;
            }

            #nurseLink, #patientLink{
                text-align: center;
                color: white;
                background-color: rgba(255,255,255, 0.1);
                border-radius: 10px;
                font-size-adjust: 0.58;
                padding: 0.2em 0;
                margin: 0.1em 0;
            }

            #doctorNoteArea, .card {
                border-radius: 15px;
                background-color: rgba(255,255,255, 0.1);
                color: white;
            }

            .card{
                background-color: rgba(255,255,255, 0.1);
                color: #f5f6fa;
                margin-bottom: 15px;
            }

            .navbar {
                text-align: center;
                list-style-type: none;
                border-top-left-radius: 1em;
                border-top-right-radius: 1em;
                background: rgba(0,0,0, 0.7);
                margin: 0 1em;
                padding-top: 1.5em;
            }

            #search-button{
                border-left: 1em !important;
            }

            #search-bar{
                width: 30em;
            }

            .fa-plus{
                font-size: 3em;
                color: #dc3545;
                margin-right: 0.5em;
                margin-left: -0.1em;
            }

            #patientsIcon, #nursesIcon{
                font-size: 1.4em;
                margin-left: 0.25em;
            }

            #sidebarTitle{
                margin-left: 1.5em;
            }

            #patientsList, #nursesList {
                border: none !important;
                padding: 0 !important;
                margin: 5px;
            }

            #nursesIcon{
                padding-top: 20px;
            }

            .list-group-item, #patient {
                background: #f5f6fa;
                border: none !important;
                padding: 0 !important;
                margin: 3px;
            }

            #loggedin {
                margin-right: 1em;
                color: white;
            }

            h4{
                display: inline-block;
            }

            .td, .th {
                border-radius:15px !important;
            }

            #table-head{
                font-size-adjust: 1;
                text-decoration: underline;
            }


            /* -------------------------------------CHEESY FOOTER WITH BIRD------------------------------------- */

            #CHEESY_FOOTER {
                color: rgb(112, 111, 111);
                height: auto;
                width: 2056px;
                background: rgba(0, 0, 0, 0) url("https://image.ibb.co/gesMRx/footer2.jpg") 
                scroll 100% 100% / auto padding-box border-box;
                background-repeat: no-repeat;
                background-size: auto;
            }

            #TEXT_BIRD {
                color: black;
                letter-spacing: 6.6px;
                text-align: center;
                text-shadow: rgba(1, 26, 68, 0.53) 0px 1px 0px;
                text-transform: uppercase;
                font: normal normal 400 normal 22px / normal Caecilia, Georgia, serif;
                padding: 125px 20px 0px;
                margin-top: 5em;
            }

            /* ----------------------------------END OF CHEESY FOOTER WITH BIRD------------------------------------- */

            #sticky-sidebar {
                max-width: 14em!important;
            }

            #main {
                border-radius: 1em;
                margin-right: 6em;
            }

            .wrapper {
                margin: 0 1em;
                background: rgba(0,0,0, 0.7);
                color: white;
                border-bottom-left-radius: 1em;
                border-bottom-right-radius: 1em;
                padding-top: 2em;
            }

            #navbarWrapperHr {
                width: 97%;
                background: rgba(255,255,255,0.2);
                margin: 0em auto;
            }

            #backgroundHr {
                margin: 0 1em;
                padding-top: 1em;
                background: rgba(0,0,0, 0.7);
            }
            #vr {
                border-left: 0.1em solid rgba(255,255,255,0.1);
            }

            .ml-auto, .mx-auto {
                margin-left: 5.5em!important;
            }

            p {
                margin: 1em;
            }

            footer {
                margin: 0 auto;
            }


