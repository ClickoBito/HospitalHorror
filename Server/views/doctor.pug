extends layout
include navbar
block content
	+navbar(username.firstname + ' ' + username.lastname)
	div.wrapper.col-m-4.sticky-top
		nav(id='sidebar sticky-top')
			// Sidebar Links
			.container-fluid
				.row
					#sticky-sidebar.col-2.sidebar-sticky
						.sticky-top
							.nav.flex-column
								ul#patientsList.list-group-flush
									h2 Patients
									each patient in patients
										li.list-group-item #{patient.firstname + ' ' + patient.lastname}
								ul#patientsList.list-group-flush
									h2 Nurses
									each nurse in nurses
										li.list-group-item #{nurse.firstname + ' ' + nurse.lastname}
					#main.col
						table.table.table-striped
							thead
								tr
									th(scope='col') Patient Name
									th(scope='col') Last Visit
									th(scope='col') Blood Pressure
							tbody
								tr
									th(scope='row') Mark Zuckerberg
									td #{patientInfo.bloodpressure}
									td #{patientInfo.weight}

						.form-group
							label(for='doctorNotes')
								strong Doctor's Notes
							textarea#exampleTextarea.form-control(rows='10' placeholder='Enter patient notes here...')
