                    <label>
                    <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                    </label>
                    </div>
                .form-group(style="margin-top:10px")
                  // Button
                  .col-sm-12.controls
                    button#btn-login.btn.btn-success(type="submit") Submit 
