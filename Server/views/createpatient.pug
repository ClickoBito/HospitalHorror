doctype html
html
  head
    title Create Patient
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css' integrity='sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4' crossorigin='anonymous')
    style(type='text/css')
      include css/style.css
  body#clrblk.createpatientBody
    include navbar
    +navbar(username.firstname + ' ' + username.lastname)
    .container
      #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.mx-auto
        .card
          .card-header
            .card-title Create new patient
              button(class='btn float-right' onclick="window.history.go(-1); return false;") Return
            // <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
            p= status
          .card-body
            form#registerform.form-horizontal(role="form" method="post" action="/patient")
              .form-group
                label.formLabel(for="sel1") Gender
                select#sel1.form-control.inputForm(name="gender")
                  option#selectOption(value="1") Male
                  option#selectOption(value="0") Female
              .form-group
                label.formLabel(for="sel_doc") Assigned doctor
                select#sel_doc.form-control.inputForm(name="DoctorId")
                  each d in doctors 
                    option#selectOption(value=d.id) #{d.fullname}
              .form-group
                label.formLabel First name
                input.form-control.inputForm(type="text" name="firstname" placeholder="First name")
              .form-group
                label.formLabel Last name
                input.form-control.inputForm(type="text" name="lastname" placeholder="Last name")
              .form-group
                label.formLabel Social Security Number
                input.form-control.inputForm(type="text" name="ssNbr" placeholder="SSN")
              .form-group
                label.formLabel Address
                input.form-control.inputForm(type="text" name="address" placeholder="Address")
                .form-group
                label.formLabel Birthdate
                input.form-control.inputForm(type="date" value="1995-09-20" name="dateofbirth")
              .form-group
                label.formLabel Phone number
                input.form-control.inputForm(type="text" name="phone" placeholder="Phone")
                .input-group
                  
                .form-group
                  // Button
                  .col-sm-12.controls#btn-login-window
                    button#btn-login.btn.btn-success(type="submit") Submit 
    script(src='https://code.jquery.com/jquery-3.3.1.js' integrity='sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js' integrity='sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ' crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js' integrity='sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm' crossorigin='anonymous')
                
