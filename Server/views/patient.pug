doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Hospital Horror
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
  body#clrblk
    .container
      #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.mx-auto(style="margin-top:50px;")
        .card
          .card-header
            .card-title Create new patient
            // <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
            p= status
          .card-body(style="padding-top:30px")
            form#registerform.form-horizontal(role="form" method="post" action="/patient")
              .form-group(style="margin: 0px 5px 25px 5px")
                label(for="sel1") Gender
                select#sel1.form-control(name="gender")
                  option(value="1") Male
                  option(value="0") Female
              .form-group(style="margin: 0px 5px 25px 5px")
                label Social Security Number
                input.form-control(type="text" name="ssNbr" placeholder="SSN")
              .form-group(style="margin: 0px 5px 25px 5px")
                label First name
                input.form-control(type="text" name="firstname" placeholder="First name")
              .form-group(style="margin: 0px 5px 25px 5px")
                label Last name
                input.form-control(type="text" name="lastname" placeholder="Last name")
              .form-group(style="margin: 0px 5px 25px 5px")
                label Address
                input.form-control(type="text" name="address" placeholder="Address")
                .form-group(style="margin: 0px 5px 25px 5px")
                label Birthdate
                input.form-control(type="date" value="1995-09-20" name="dateofbirth")
              .form-group(style="margin: 0px 5px 25px 5px")
                label Phone number
                input.form-control(type="text" name="phone" placeholder="Phone")
                .input-group
                  
                .form-group(style="margin-top:10px")
                  // Button
                  .col-sm-12.controls
                    button#btn-login.btn.btn-success(type="submit") Submit 
                
